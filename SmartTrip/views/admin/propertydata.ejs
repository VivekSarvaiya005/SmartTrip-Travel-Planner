<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Available Properties - SmartTrip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="icon" href="/img/icon.jpg">
    <style>
        .card {
            margin-bottom: 20px;
        }

        .carousel-item img {
            height: 200px;
            object-fit: cover;
        }

        .hero-section h2 {
            background: rgba(0, 0, 0, 0.7);
            padding: 30px 80px;
            border-radius: 20px;
            font-size: 4vh;
            font-weight: bold;
        }

        .hero-section {
            background: url('/img/hotel.jpg') center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
    </style>
</head>

<body>
      <!-- header -->
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <h2><a class="navbar-brand-lg text-light text-decoration-none" href="#">SmartTrip</a></h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link " href="/admin/home">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/userdata">Users</a></li>
                    <li class="nav-item"><a class="nav-link " href="/admin/planing">Planning</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/displayplans">Packages</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/bookings">Bookings</a></li>
                    <li class="nav-item"><a class="nav-link" href="/admin/vendordata">Vendors</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/admin/propertydata">Properties</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-danger text-white px-3" href="/admin/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="hero-section text-center">
        <h2>Available properties</h2>
    </div>
    <div class="container mt-4">
        <div class="alert alert-primary text-center">
            <h5>Accept Request Of Vendors For Publish Property <a href="/admin/activeproperty">All Property</a></h5>
        </div>
        <div class="row">
            <% properties.forEach((properties, propertiesIndex)=> { %>
                <div class="col-md-4">
                    <div class="card">
                        <div id="carousel<%= propertiesIndex %>" class="carousel slide" data-bs-ride="carousel"
                            data-bs-interval="3000">
                            <div class="carousel-inner">
                                <% if (properties.images.length> 0) { %>
                                    <% properties.images.forEach((image, index)=> { %>
                                        <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                            <img src="<%= image %>" class="d-block w-100" alt="properties Image">
                                        </div>
                                        <% }) %>
                                            <% } else { %>
                                                <div class="carousel-item active">
                                                    <img src="/images/default.jpg" class="d-block w-100"
                                                        alt="Default properties Image">
                                                </div>
                                                <% } %>
                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carousel<%= propertiesIndex %>" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carousel<%= propertiesIndex %>" data-bs-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </button>
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">
                                <%= properties.propertyname %>
                            </h3>
                            <p class="text-secondary description">
                                <%= properties.description %>
                            </p>
                            <a href="javascript:void(0);" class="show-more text-primary"
                                style="display: block;">Show More</a>
                            <script>
                                document.addEventListener("DOMContentLoaded", function () {
                                    document.querySelectorAll(".show-more").forEach(button => {
                                        button.addEventListener("click", function () {
                                            let desc = this.previousElementSibling; // Get the description paragraph
                                            if (desc.style.webkitLineClamp === "3") {
                                                desc.style.display = "block"; // Show full text
                                                desc.style.webkitLineClamp = "unset"; // Remove line clamping
                                                this.textContent = "Show Less";
                                            } else {
                                                desc.style.display = "-webkit-box";
                                                desc.style.webkitLineClamp = "3"; // Clamp text to 3 lines
                                                this.textContent = "Show More";
                                            }
                                        });
                                    });
                                });
                            </script>
                            <div class="alert alert-success">
                                <h5 class="card-text">
                                    Vendor Name : <%= Vendors.name %> <br>
                                        City : <%= properties.city %>
                                </h5>
                            </div>
                            <div class="alert alert-warning">
                                <h5 class="card-text price">Rs.<%= properties.price %>/Person
                                </h5>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <form action="/admin/propertyupdate/<%= properties._id %>" method="post">
                                        <button type="submit" class="btn btn-primary w-100"
                                            onclick="return confirm('Accept Request For Publish Property!')">Accept</button>
                                    </form>
                                </div>
                                <div class="col-6">
                                    <form action="/admin/propertydecline/<%= properties._id %>" method="post">
                                        <button type="submit" class="btn btn-danger w-100"
                                            onclick="return confirm('Are You Sure?')">Decline</button>
                                    </form>
                                </div>
                            </div>
                            <!-- <a href="/admin/editproperty/<%= properties._id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form action="/admin/propertydelete/<%= properties._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button> -->
                            </form>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light py-2 mt-5">
        <div class="container text-center">
            <div class="mb-5 mt-5">
                <img src="/img/icon_full.jpg" alt="Logo" width="200">
            </div>
            <div class="mt-3">
                <p>&copy;2025 SmartTrip. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
</body>

</html>