<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Users - SmartTrip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="icon" href="/img/icon.jpg">
    <style>
        .card {
            margin-bottom: 20px;
        }

        .hero-section h2 {
            background: rgba(0, 0, 0, 0.5);
            padding: 30px 80px;
            border-radius: 20px;
            font-size: 4vh;
            font-weight: bold;
        }

        .hero-section {
            background: url('/img/about_cover.jpg') center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }
    </style>
</head>

<body>
         <!-- header -->
         <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <h2><a class="navbar-brand-lg text-light text-decoration-none" href="#">SmartTrip</a></h2>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link " href="/admin/home">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link active" href="/admin/userdata">Users</a></li>
                        <li class="nav-item"><a class="nav-link " href="/admin/planing">Planning</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/displayplans">Packages</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/bookings">Bookings</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/vendordata">Vendors</a></li>
                        <li class="nav-item"><a class="nav-link " href="/admin/propertydata">Properties</a></li>
                        <li class="nav-item"><a class="nav-link btn btn-danger text-white px-3" href="/admin/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    <!-- Page Content -->
    <div class="hero-section text-center">
        <h2>Registered Users</h2>
    </div>
    <div class="container mt-4">
        <div class="row">
            <% user.forEach((user, userIndex)=> { %>
                <div class="col-md-4">
                    <div class="card">

                        <div class="card-body">
                            <h3 class="card-title">
                                <%= user.name %>
                            </h3>
                            <p class="card-text"><i class="bi bi-geo-alt"></i>
                                <%= user.city %>, <%= user.state %>, <%= user.country %>
                            </p>
                            <div class="alert alert-success">
                                <h5 class="card-text"><i class="bi bi-telephone"></i>
                                    <%= user.mono %>
                                </h5>
                            </div>
                            <div class="alert alert-primary">
                                <h5 class="card-text price"><i class="bi bi-envelope"></i>
                                    <%= user.email %>
                                </h5>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light py-2 mt-5">
        <div class="container text-center">
            <div class="mb-5 mt-5">
                <img src="/img/icon_full.jpg" alt="Logo" width="200">
            </div>
            <div class="mt-3">
                <p>&copy;2025 SmartTrip. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
</body>

</html>