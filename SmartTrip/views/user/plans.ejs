<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plan Details - SmartTrip</title>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="icon" href="/img/icon.jpg">
    <style>
        /* Footer */
        footer {
            position: relative;
            width: 100%;
            bottom: 0;
        }

        .price {
            font-weight: bold;
            color: #ff5733;
        }

        .card {
            margin-bottom: 20px;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .carousel-item img {
            height: 200px;
            object-fit: cover;
            border-radius: 10px;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .card img {
            height: 200px;
            object-fit: cover;
        }

        .explore-btn {
            background-color: transparent;
            border: 1px solid #007bff;
            color: #007bff;
            transition: 0.3s;
        }

        .explore-btn:hover {
            background-color: #007bff;
            color: white;
        }

        .hero-section h2 {
            background: rgba(0, 0, 0, 0.5);
            padding: 30px 80px;
            border-radius: 20px;
            font-size: 4vh;
            font-weight: bold;
        }

        .hero-section {
            background: url('/img/package.jpg') center;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .description {
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</head>

<body>
    <!-- HEADER (Navbar) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <h2><a class="navbar-brand-lg text-light text-decoration-none" href="#">SmartTrip</a></h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/user/index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/weather">Weather Forcast</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/destinations">Destinations</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/bookings">Bookings</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/profile">Profile</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-danger text-white px-3"
                            href="/user/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page Content -->
    <div class="hero-section text-center">
        <h2>Available Packages</h2>
    </div>
    <div class="container mt-4">
        <div class="row g-4">
            <% planing.forEach((planing, planingIndex)=> { %>
                <div class="col-md-4">
                    <form action="/user/plans" method="post" class="pay-form">
                        <input type="hidden" name="source" value=" <%= source %>">
                        <input type="hidden" name="destination" value=" <%= destination %>">
                        <input type="hidden" name="date" value=" <%= date %>">
                        <input type="hidden" name="person" value=" <%= person %>">
                        <div class="card">
                            <div id="carousel<%= planingIndex %>" class="carousel slide" data-bs-ride="carousel"
                                data-bs-interval="3000">
                                <div class="carousel-inner">
                                    <% if (planing.images && planing.images.length> 0) { %>
                                        <% planing.images.forEach((image, index)=> { %>
                                            <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                                <img src="/<%= image %>" class="d-block w-100 product-image"
                                                    alt="planing Image">
                                            </div>
                                            <% }) %>
                                                <% } else { %>
                                                    <!-- Default Image -->
                                                    <div class="carousel-item active">
                                                        <img src="/images/default.jpg"
                                                            class="d-block w-100 product-image"
                                                            alt="Default planing Image">
                                                    </div>
                                                    <% } %>
                                </div>
                                <!-- Carousel Controls -->
                                <button class="carousel-control-prev" type="button"
                                    data-bs-target="#carousel<%= planingIndex %>" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button"
                                    data-bs-target="#carousel<%= planingIndex %>" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>

                            <div class="card-body">
                                <h3 class="card-title col-10 mt-2">
                                    <%= planing.placename %>
                                </h3>
                                <input type="hidden" name="propertyname" value="<%= planing.propertyname %>">

                                <p class="text-secondary description">
                                    <%= planing.description %>
                                </p>
                                <a href="javascript:void(0);" class="show-more text-primary"
                                    style="display: block;">Show More</a>
                                <script>
                                    document.addEventListener("DOMContentLoaded", function () {
                                        document.querySelectorAll(".show-more").forEach(button => {
                                            button.addEventListener("click", function () {
                                                let desc = this.previousElementSibling; // Get the description paragraph
                                                if (desc.style.webkitLineClamp === "3") {
                                                    desc.style.display = "block"; // Show full text
                                                    desc.style.webkitLineClamp = "unset"; // Remove line clamping
                                                    this.textContent = "Show Less";
                                                } else {
                                                    desc.style.display = "-webkit-box";
                                                    desc.style.webkitLineClamp = "3"; // Clamp text to 3 lines
                                                    this.textContent = "Show More";
                                                }
                                            });
                                        });
                                    });
                                </script>
                                <p class="mt-2">package Days - <%= planing.days.length %></p>
                                <input type="hidden" name="city" value=" <%= planing.city %>">
                                <div class="alert alert-warning">
                                    <h5 class="card-text">Rs.<%= planing.price %>/Person
                                    </h5>
                                    <h4 class="card-text">Total Price -- Rs.<%= planing.price * person %>
                                    </h4>
                                </div>
                                <input type="hidden" name="hotelprice" value="<%= hotelprice %>">
                                <input type="hidden" name="planingprice" value="<%= planing.price * person %>">
                                <input type="hidden" name="planingname" value="<%= planing.planingname  %>">
                                <input type="hidden" name="planid" value="<%= planing._id  %>">
                                <input type="hidden" name="propertyid" value="<%= property._id %>">
                                <button type="submit" value="selevt Hotel"
                                    class="btn explore-btn w-100">EXPLORE</button>
                            </div>
                        </div>
                </div>
                </form>
                <% }) %>
        </div>
    </div>


    <!-- FOOTER -->
    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-5 mt-5">
                    <img src="/img/icon_full.jpg" alt="Logo" width="200" class="mb-2">
                    <h4>Smart Travel Planner</h4>
                </div>
                <div class="col-md-4 mb-5 mt-5">
                    <h4>Quick Links</h4>
                    <ul class="list-unstyled">
                        <li><a href="/user/index" class="text-light text-decoration-none">Home</a></li>
                        <li><a href="/user/destinations" class="text-light text-decoration-none">Destinations</a></li>
                        <li><a href="/user/about" class="text-light text-decoration-none">About Us</a></li>
                        <li><a href="/user/contact" class="text-light text-decoration-none">Contact</a></li>
                        <li><a href="/user" class="text-light text-decoration-none">Logout</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-5 mt-5">
                    <h4>Follow Us On</h4>
                    <a href="https://www.facebook.com/" class="text-light mx-2"><i class="bi bi-facebook"></i></a>
                    <a href="https://x.com/" class="text-light mx-2"><i class="bi bi-twitter"></i></a>
                    <a href="https://www.instagram.com/" class="text-light mx-2"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
            <div class="mt-3">
                <p class="mb-3">&copy;2025 SmartTrip. All Rights Reserved.</p>
            </div>
        </div>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    </footer>
</body>

</html>