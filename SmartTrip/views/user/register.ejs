<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="icon" href="/img/icon.jpg">
    <title>SignUp - SmartTrip</title>
    <style>
        .container {
            display: flex;
            align-items: center;
            margin-top: 10vh;
            border-radius: 20px;
            padding: 0;
        }

        .container .left {
            width: 50%;
            text-align: center;
        }

        .container .left h2 {
            font-size: 5vh;
            color: #0d6efd;
            font-weight: bold;
        }

        .container .left p {
            font-size: 18px;
            margin-bottom: 30px;
            color: gray;
        }

        .container .left .input-group {
            margin-top: 20px;
            width: 50vh;
            margin-left: 8vh;
        }

        .container .left .btn {
            margin-top: 25px;
            width: 25vh;
            margin-left: 25px;
            margin-bottom: 25px;
        }

        .container .left .row {
            margin-left: 40px;
        }

        .container .right {
            width: 50%;
        }

        .container .right img {
            border-top-right-radius: 20px;
            border-bottom-right-radius: 20px;
        }
    </style>
    <script>
        function validate() {
            let name = document.myform.name.value;
            let mono = document.myform.mono.value;
            let email = document.myform.email.value;
            let pass = document.myform.pass.value;
            let cpass = document.myform.cpass.value;
            if (name == "") {
                alert("Name must be required!");
                return false;
            }
            else if (mono == "") {
                alert("Mobile No. must be required!");
                return false;
            }
            else if (email == "") {
                alert("E-mail must be required!");
                return false;
            }
            else if (pass.length < 8) {
                alert("Password must be Atleast 8 characters long!");
                return false;
            }
            else if (pass != cpass) {
                alert("Password did not match!");
                return false;
            }
        }
    </script>
</head>

<body>
    <div class="container">
        <div class="left">
            <h2>Create An Account</h2>
            <p>Register As New User Of SmartTrip</p>
            <form action="/user/register" method="post" name="myform" onsubmit="return alert('Registration Successful As User!')">
                <div class="input-group">
                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                            fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                        </svg><i class="bi bi-person-fill"></i></span>
                    <input type="text" name="name" maxlength="30" class="form-control" placeholder="Name">

                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-calendar2-week-fill" viewBox="0 0 16 16">
                            <path
                                d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5m9.954 3H2.545c-.3 0-.545.224-.545.5v1c0 .276.244.5.545.5h10.91c.3 0 .545-.224.545-.5v-1c0-.276-.244-.5-.546-.5M8.5 7a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zm3 0a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5zM3 10.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1a.5.5 0 0 0-.5.5m3.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5z" />
                        </svg><i class="bi bi-calendar2-week-fill"></i></span>
                    <input type="text" name="dob" class="form-control" onfocus="(this.type='date')" placeholder="Date Of Birth" required>
                </div>
                <div class="input-group">
                    <input type="text" name="country" maxlength="20" class="form-control" placeholder="Country"
                        required>
                    <input type="text" name="state" maxlength="20" class="form-control" placeholder="State" required>
                </div>
                <div class="input-group">
                    <input type="text" name="city" maxlength="20" class="form-control" placeholder="City" required>
                    <input type="text" name="zip" maxlength="6" class="form-control" placeholder="Zipcode" required>
                </div>
                <div class="input-group">
                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-telephone-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M1.885.511a1.745 1.745 0 0 1 2.61.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.68.68 0 0 0 .178.643l2.457 2.457a.68.68 0 0 0 .644.178l2.189-.547a1.75 1.75 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.6 18.6 0 0 1-7.01-4.42 18.6 18.6 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877z" />
                        </svg><i class="bi bi-telephone-fill"></i></span>
                    <input type="text" name="mono" maxlength="10" class="form-control" placeholder="XXXXX XXXXX">
                </div>
                <div class="input-group">
                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                            fill="currentColor" class="bi bi-envelope-fill" viewBox="0 0 16 16">
                            <path
                                d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414zM0 4.697v7.104l5.803-3.558zM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586zm3.436-.586L16 11.801V4.697z" />
                        </svg><i class="bi bi-envelope-fill"></i></span>
                    <input type="email" name="email" maxlength="35" class="form-control" placeholder="E-Mail Address">
                </div>
                <div class="input-group">
                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                            fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path
                                d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
                        </svg><i class="bi bi-lock-fill"></i></span>
                    <input type="password" name="pass" maxlength="15" class="form-control" placeholder="Password">

                    <span class="input-group-text"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                            fill="currentColor" class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path
                                d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
                        </svg><i class="bi bi-lock-fill"></i></span>
                    <input type="password" name="cpass" maxlength="15" class="form-control"
                        placeholder="Confirm Password">
                </div>
                <div class="row">
                    <input type="submit" value="SIGNUP" name="signup" class="btn btn-primary col-4" onclick="return validate()">
                    <input type="reset" value="CLEAR" name="clear" class="btn btn-danger col-4">
                </div>
                <p>Already have an account? <a href="/user">Login here</a></p>
            </form>
        </div>
        <div class="right">
            <img src="/img/register_template.jpg" alt="">
        </div>
    </div>
</body>

</html>