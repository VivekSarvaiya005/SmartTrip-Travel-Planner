<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registered Users - SmartTrip</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="icon" href="/img/icon.jpg">
    <style>
        .card {
            margin-bottom: 20px;
        }

        .hero-section h2 {
            background: rgba(0, 0, 0, 0.5);
            padding: 30px 80px;
            border-radius: 20px;
            font-size: 4vh;
            font-weight: bold;
        }

        .hero-section {
            background: url('/img/bookingbg.jpg') center/cover no-repeat;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
        }

        .description {
    overflow: hidden;
    max-height: 90px;
    transition: max-height 0.3s ease;
}

.show-more {
    cursor: pointer;
    color: #007bff;
}

.show-more:hover {
    text-decoration: underline;
}

    </style>
</head>

<body>
     <!-- HEADER (Navbar) -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <h2><a class="navbar-brand-lg text-light text-decoration-none" href="#">SmartTrip</a></h2>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/user/index">Home</a></li>
                    <li class="nav-item"><a class="nav-link " href="/user/weather">Weather Forcast</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/destinations">Destinations</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/user/bookings">Bookings</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/contact">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="/user/profile">Profile</a></li>
                    <li class="nav-item"><a class="nav-link btn btn-danger text-white px-3" href="/user/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    
    <!-- Page Content -->
    <div class="hero-section text-center">
        <h2>Booking</h2>
    </div>
    <div class="container mt-4">
        <div class="row">
            <% bookings.forEach((booking, bookingIndex) => { %>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">
                                <%= user.name %>
                            </h3>

                            <!-- Booking Details -->
                            <p class="card-text"><i class="bi bi-person-arms-up"></i> Travelers: <%= booking.person %></p>
                            <div class="alert alert-success">
                                <h5 class="card-text"><i class="bi bi-calendar-check-fill"></i> Date: <%= booking.date %></h5>
                            </div>
                            <div class="alert alert-primary">
                                <h5 class="card-text"><i class="bi bi-envelope"></i> Email: <%= user.email %></h5>
                            </div>

                            <!-- Plan Details -->
                            <% if (booking.plan) { %>
                                <div class="alert alert-info">
                                    <h5 class="card-text"><i class="bi bi-map"></i> Plan: <%= booking.plan.placename %></h5>
                                    <p><i class="bi bi-geo-alt-fill"></i> Location: <%= booking.plan.country %> , <%= booking.plan.state %> , <%= booking.plan.city %></p>
                            
                                    <!-- Display Days if Available -->
                                    <% if (booking.plan.days && booking.plan.days.length > 0) { %>
                                        <div class="text-secondary description" style="overflow: hidden; max-height: 90px; transition: max-height 0.3s ease;">
                                            <% booking.plan.days.forEach((day, index) => { %>
                                                <p class="mb-1"><strong>Day <%= day.day %>:</strong> <%= day.plan %></p>
                                            <% }) %>
                                        </div>
                                        <a href="javascript:void(0);" class="show-more text-primary d-block text-center mt-2">Show More</a>
                                    
                                        <script>
                                            document.addEventListener("DOMContentLoaded", function () {
                                                document.querySelectorAll(".show-more").forEach(button => {
                                                    button.addEventListener("click", function () {
                                                        const desc = this.previousElementSibling;
                                                        if (desc.style.maxHeight === "90px") {
                                                            desc.style.maxHeight = "none"; // Expand the content
                                                            this.textContent = "Show Less";
                                                        } else {
                                                            desc.style.maxHeight = "90px"; // Collapse the content
                                                            this.textContent = "Show More";
                                                        }
                                                    });
                                                });
                                            });
                                        </script>
                                    <% } else { %>
                                        <div class="alert alert-warning">No day-wise plan available.</div>
                                    <% } %>


                                </div>
                            <% } %>


                            <!-- Property Details -->
                            <% if (booking.property) { %>
                                <div class="alert alert-warning">
                                    <h5 class="card-text"><i class="bi bi-house"></i> Property: <%= booking.property.propertyname %></h5>
                                    <!-- <p><i class="bi bi-geo-alt"></i> Location: <%= booking.property.location %></p> -->
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-dark text-light py-2 mt-5">
        <div class="container text-center">
            <div class="mb-5 mt-5">
                <img src="/img/icon_full.jpg" alt="Logo" width="200">
            </div>
            <div class="mt-3">
                <p>&copy;2025 SmartTrip. All Rights Reserved.</p>
            </div>
        </div>
    </footer>
</body>

</html>